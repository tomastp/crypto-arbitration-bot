{
  "name": "crypto-arbitration-bot",
  "version": "1.0.0",
  "description": "A project made to arbitrate a cryptocurrency on two different exchanges, Bitso and CryptoMarket. The arbitration criterion is %5",
  "scripts": {
    "build-server": "npx tsc --project ./src/server",
    "build-client": "npx tsc --project ./src/client",
    "dev-concurrently": "concurrently -k \"npx tsc -p ./src/server -w\"  \"nodemon dist/server/index.js\"",
    "start": "concurrently -k  \"node ./dist/server/index.js\""
  },
  "author": "Tomas Ponzone",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "morgan": "^1.10.0",
    "rxjs": "^7.5.5",
    "typescript": "^4.6.2",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15"
  }
}
